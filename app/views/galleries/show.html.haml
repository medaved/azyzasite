.container
 .gallery-feed
  - @images.each do |image|
   .col-xs-12.col-sm-4.col-md-3.col-lg-3
    - if image.fileimage.present?
     = link_to image.fileimage.url, class: "img", data: { title: CGI::escapeHTML(image.name || "Oups..."), titleOpt: CGI::escapeHTML(image.caption || "Работаем на этим!"), saleOpt: CGI::escapeHTML(image.saleopt || "Уточняйте!"), lightbox: CGI::escapeHTML(@gallery.name) } do
      = image_tag image.fileimage.thumb.url , class: 'img-thumbnail'